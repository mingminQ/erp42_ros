<!-- erp42_gazebo.launch.xml -->
<launch>

    <!-- Robot description file and gazebo world file -->
    <arg name="description_file" default="$(find-pkg-share erp42_gazebo)/urdf/erp42_gazebo.xacro"/>
    <arg name="world_file"       default="$(find-pkg-share erp42_gazebo)/worlds/empty.world"     />
    
    <!-- ERP42 spawn -->
    <arg name="spawn_position_x"        default="0.0" />
    <arg name="spawn_position_y"        default="0.0" />
    <arg name="spawn_position_z"        default="0.0" />
    <arg name="spawn_orientation_roll"  default="0.0" />
    <arg name="spawn_orientation_pitch" default="0.0" />
    <arg name="spawn_orientation_yaw"   default="0.0" />

    <!-- GUI -->
    <arg name="control_panel" default="true" />
    <arg name="rviz"          default="true" />



</launch>